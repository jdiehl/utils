{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "scripthost", "es5", "es2015.promise", "es2015.collection"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "inlineSourceMap": true
  },
  "include": [
    "src/**.ts"
  ]
}
